# Lynx config
export LYNX_CFG=~/.config/lynx/lynx.cfg



# fly cli
export FLYCTL_INSTALL="${HOME}/.config/fly"


# sonarqube
export SONAR_SCANNER_HOME="/opt/sonar-scanner"



